#include <stdio.h>

int main()
{
    int n;
    scanf("%d", &n);

    int a[100][100];
    int top = 0, bottom = n - 1, left = 0, right = n - 1;
    int num = 1, i, j;
    int borderSum = 0;

    // Spiral filling
    while (top <= bottom && left <= right)
    {
        for (i = left; i <= right; i++)
            a[top][i] = num++;
        top++;

        for (i = top; i <= bottom; i++)
            a[i][right] = num++;
        right--;

        if (top <= bottom)
        {
            for (i = right; i >= left; i--)
                a[bottom][i] = num++;
            bottom--;
        }

        if (left <= right)
        {
            for (i = bottom; i >= top; i--)
                a[i][left] = num++;
            left++;
        }
    }

    // Print matrix & calculate border sum
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < n; j++)
        {
            printf("%4d", a[i][j]);

            // Border condition
            if (i == 0 || i == n-1 || j == 0 || j == n-1)
                borderSum += a[i][j];
        }
        printf("\n");
    }

    printf("\nSum of border elements = %d\n", borderSum);

    return 0;
}
