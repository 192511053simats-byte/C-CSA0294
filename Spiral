#include <stdio.h>
int main()
{
	int i,j,n;
	scanf("%d",&n);
	int a[50][50],top=0,bottom=n-1,left=0,right=n-1,num=1;
	
	while(top<=bottom&&left<=right)
	{
		for(i=left;i<=right;i++)
		{
			a[top][i]=num++;
			
		}
		top++;
		for(i=top;i<=bottom;i++)
		{
			a[i][right]=num++;
			
		}
		right--;
		if(top<=bottom)
		{
			for(i=right;i>=left;i--)
			{
				a[bottom][i]=num++;
				
			}
			bottom--;
		}
		if(left<=right)
		{
			for(i=bottom;i>=top;i--)
			{
				a[i][left]=num++;
			}
			left++;
		}
	}
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
			printf("%4d",a[i][j]);
		}
		printf("\n");
	}
}
